            android:name="cn.fanfan.asking.AskingFragmentActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="cn.fanfan.detail.question.DetailQuestionActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="cn.fanfan.found.Found"
            android:label="@string/app_name" >
