        <activity android:name="cn.fanfan.topic.BestAnswersActivity" >
        </activity>
        <activity android:name="cn.fanfan.detail.question.TopicAboutActivity" >
        </activity>
        <activity android:name="cn.fanfan.userinfo.ArticleActivity" >
