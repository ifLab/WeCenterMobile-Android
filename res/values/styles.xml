<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Zhihu.TextAppearance.Title.Main" parent="@android:style/TextAppearance.Holo">
        <item name="android:textColor">@color/selectable_text_color_black</item>
    </style>

    <style name="Zhihu.TextAppearance.Title.Main.Large" parent="@style/Zhihu.TextAppearance.Title.Main">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="login_dialog" parent="@android:style/Theme.Holo.Light.Dialog.NoActionBar"></style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    
</resources>